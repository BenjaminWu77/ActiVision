{
  "manifest_version": 2,
  "name": "Workout Screen Time Manager",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://localhost:5001/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.tiktok.com/*", "*://*.reddit.com/*", "*://*.twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}